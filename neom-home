#!/bin/bash

# NEOM OS Home
# neom-home - Main menu and launcher

# Load environment variables
if [ -f "$HOME/.neom-os/.env" ]; then
    source "$HOME/.neom-os/.env"
fi

# Source the emoticon library for consistency
