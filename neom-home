echo -e "${PURPLE}built by:${RESET}"
echo -e "${PURPLE}"
cat << "EOF"
   â–„â–€â–ˆ â–ˆâ–€â–ˆ â–€â–ˆâ–€ â–ˆâ–€ â–ˆâ–€â–€ â–„â–€â–ˆ
   â–ˆâ–€â–ˆ â–ˆâ–€â–„ â–‘â–ˆâ–‘ â–„â–ˆ â–ˆâ–ˆâ–„ â–ˆâ–€â–ˆ
EOF

echo -e "${DIM_GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo -e "${YELLOW}${BOLD}NEOM OS v1.0.3${RESET}"
echo -e "${DIM_GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${RESET}"
echo ""
echo -e "${GRAY}ðŸ“– Command Center: ${RESET}${BLUE}https://notion.so/ifthis/neomOS${RESET}"
